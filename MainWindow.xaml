<Window x:Class="GrafikaZadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrafikaZadanie1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Canvas Name="canvas" Background="White" MouseDown="canvas_MouseDown" MouseMove="canvas_MouseMove" MouseLeftButtonUp="canvas_MouseLeftButtonUp" KeyDown="canvas_KeyDown">
            <ToolBar DockPanel.Dock="Top">
                <Button Click="Linia">Linia</Button>
                <Button Click="Tekst">Tekst</Button>
                <Button Click="Rysowanie">Rysowanie</Button>
                <Button Click="Zapisz">Zapisz</Button>
            </ToolBar>
        </Canvas>
    </DockPanel>
</Window>
